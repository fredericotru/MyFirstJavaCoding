import java.util.Scanner; 

class Main {
  public static void main(String[] args) {
  Scanner n1 = new Scanner(System.in);
  int num1;
  int num2;
  double num3;
  double result1;
  double result2;
  double result3;
  System.out.println("Digite um numero inteiro");
  num1 = n1.nextInt();
  System.out.println("Digite o segundo numero inteiro");
  num2 = n1.nextInt();
  System.out.println("Digite um numero real");
  num3 = n1.nextDouble();
  result1 = (num1*2)+(num2/2);
  result2 = (num1*3)+num3;
  result3 = Math.pow(num3,3);
  System.out.println("o produto do dobro do primeiro com metade do segundo é " + result1);
  System.out.println("a soma do triplo do primeiro com o terceiro é " + result2);
  System.out.printf("o terceiro elevado ao cubo é %.2f" , result3);
  n1.close();
  }
}
